   <h1>家計簿</h1>
 <table>
  <thead>
    <h3>一覧</h3>
   <tr>
    <td>日付</td>
    <td>科目</td>
    <td>金額</td>
    <td>摘要</td>
    <td>相手科目</td>
   </tr>
  </thead>
  <tbody>
   <% @days.each do |day| %>
    <tr>
     <td><%= day.date %></td>
     <td><%= day.name %></td>
     <td><%= day.value %></td>
     <td><%= day.detail %></td>
     <td><%= day.asset %></td>
     <td><%= link_to '編集', edit_day_path(day) %></td>
     <td><%= link_to '削除', day_path(day), method: :delete %></td>
    </tr>
   <% end %>
   </tbody>
   <tfoot>
    <tr>
         <td colspan="2">合計</td>
         <td><%= Day.all.sum(:value) %></td>
        
    </tr>      
   </tfoot>
 </table>
   <%= link_to '家計登録', new_day_path %>